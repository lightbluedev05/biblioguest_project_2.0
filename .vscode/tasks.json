{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Compilar archivo actual con c++",
      "command": "E:\\Compilador\\mingw64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${fileDirname}/*.cpp",
        "-o",
        "${fileDirname}\\app.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
    {
      "label": "Compilar y ejecutar archivo actual con g++",
      "type": "shell",
      "command": "start",
      "args": [
        "${fileDirname}\\app.exe"
      ],
      "dependsOn": "Compilar archivo actual con c++",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}